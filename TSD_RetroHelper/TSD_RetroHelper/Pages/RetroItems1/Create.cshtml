    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>RetroItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RetroItem.Rating" class="control-label"></label>
                <input asp-for="RetroItem.Rating" class="form-control" />
                <span asp-validation-for="RetroItem.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RetroItem.Name" class="control-label"></label>
                <input asp-for="RetroItem.Name" class="form-control" />
                <span asp-validation-for="RetroItem.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RetroItem.Comment" class="control-label"></label>
                <input asp-for="RetroItem.Comment" class="form-control" />
                <span asp-validation-for="RetroItem.Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RetroItem.RetroBoardRefId" class="control-label"></label>
                <select asp-for="RetroItem.RetroBoardRefId" class ="form-control" asp-items="ViewBag.RetroBoardRefId"></select>
