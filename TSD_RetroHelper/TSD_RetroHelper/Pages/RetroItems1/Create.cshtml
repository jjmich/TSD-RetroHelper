                <span asp-validation-for="RetroItem.ColumnId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input  asp-for="RetroItem.ColumnId" type="submit" value="Create" class="btn btn-default" asp-route-id=@Request.Query["id"] asp-route-name=@Request.Query["name"]/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index" asp-route-id=@Request.Query["id"] asp-route-name=@Request.Query["name"]>Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
