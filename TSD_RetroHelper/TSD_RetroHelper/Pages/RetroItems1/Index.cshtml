                    <br />
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                }
            }
        </div>
    </div>
    <div class="column-right">
        <h3>Action Points</h3>
        <div style="retro-item-container-right">
            @foreach (var item in Model.RetroItem)
            {
                @if (item.ColumnId == 3)
