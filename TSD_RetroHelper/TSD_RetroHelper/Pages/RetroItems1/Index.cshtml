<h2>Index</h2>

<p>
    <a asp-page="Create" asp-route-ColumnId="1">Create New 1</a>
    <a asp-page="Create" asp-route-ColumnId="2">Create New 2</a>
    <a asp-page="Create" asp-route-ColumnId="3">Create New 3</a>
</p>

<div class="container">
    <div class="column-left">
        <h3>Went Well</h3>
        <div style="retro-item-container-left">
            @foreach (var item in Model.RetroItem)
            {
                @if (item.ColumnId == 1)
                {
                    <h4>@Html.DisplayNameFor(model => model.RetroItem[0].Rating)</h4>
                    @Html.DisplayFor(modelItem => item.Rating)
                    <h4>@Html.DisplayNameFor(model => model.RetroItem[0].Name)</h4>
                    @Html.DisplayFor(modelItem => item.Name)
                    <h4>@Html.DisplayNameFor(model => model.RetroItem[0].Comment)</h4>
                    @Html.DisplayFor(modelItem => item.Comment)
                    <br />
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                    <br />
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a>
                    <br />
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                }
            }
        </div>

    </div>
    <div class="column-center">
        <h3>To Improve</h3>
